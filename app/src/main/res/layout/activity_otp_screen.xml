<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_otp_bg"
    android:orientation="vertical"
    tools:context=".activity.OtpScreen">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/top_pix" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Verify your number"
            android:textColor="@color/white"
            android:textSize="22sp"
             android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
             android:fontFamily="@font/montserrat_regular"
            android:maxWidth="300dp"
            android:text="Enter your OTP code here that we have to 456787654"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@drawable/blue_rect"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="28sp"
                 android:fontFamily="@font/montserrat_semi_bold"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/blue_rect"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="28sp"
                 android:fontFamily="@font/montserrat_semi_bold" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/blue_rect"
                android:gravity="center"

                android:text="6"
                android:textColor="@color/white"
                android:textSize="28sp"
                 android:fontFamily="@font/montserrat_semi_bold"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/blue_rect"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="28sp"
                 android:fontFamily="@font/montserrat_semi_bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/orange_graf"
            android:gravity="center"
            android:padding="10dp"
            android:text="Continue"   android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"   android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Resend OTP"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</ScrollView>
